{% extends "base.html.twig" %}
{% block meta_description %}
    <meta name="description" content="Affichage d'une revenue" />   
{% endblock %}
{% block title %}Sujet : {{sujet.titre}}{% endblock %}
{% block body %}
    <div class="container">
    <script>
        var form = document.getElementById("comment_content");
        form.target.reset();

        </script>
        {% include "partials/flash.html.twig" %}
        <div class="message">
            <h1 class="text-center py-3"><b>{{sujet.titre}}</b></h1>
            <div class="py-2 text-center"> 
            {% if sujet.authors.picture %}
                        <img src="{{ asset("images/" ~ sujet.authors.picture) }}" class="avatar avatar-show">
                        {% else %}
                        <img src="data:image/svg+xml;base64," alt="" class="avatar avatar-mini mr-2 my-1"/> 
                        {% endif %}
                <p style="display:inline;">{{sujet.authors.firstname}} {{sujet.authors.lastname}}</p>
                <p>Posté le : {{sujet.createdAt | date('d/m/Y', "Europe/Paris")}} à {{sujet.createdAt | date('H:i', "Europe/Paris")}}</p>
                {% if app.user %}
                {% if app.user.id == sujet.authors.id %}
                    {% if sujet.desable %}
                <b>
                    <a href="{{ absolute_url(path('desabonnement', {"id": sujet.id, 'token': sujet.desable})) }}" class="lien-header">
                        <img class="notification" src="{{asset('images/notification.png')}}" alt="notification"> - Ne plus être averti des prochaines réponses
                    </a>
                </b>
            {% else %}
               <b> <a href="{{ absolute_url(path('sabonner', {"id": sujet.id})) }}" class="lien-header">
                <img class="notification" src="{{asset('images/bell.png')}}" alt="notification"> - Être averti des prochaines réponses
                </a>
                </b>
            {% endif %}
        
        {% endif %}
                
                {% endif %}
                
                
            </div>
            <div class="p-3"><p class="contenu">{{sujet.contenu}}</p>
            {% if sujet.image %}
                <img class="d-block image-contenu w-100" src="{{ asset("images/" ~ sujet.image)}}" alt="Image du contenu" style="max-width:500px; margin:0 auto;">
            {% endif %}</div>
            </div>
        </div>
        <div class="container">
        
        {% if sujet.comments|length > 0 %}
            <h4 class="text-left py-2 mt-2">{{sujet.comments|length }}
            {% if sujet.comments|length > 1 %}
                    Commentaires de nos utilisateurs :
                {% else %}
                    Commentaire de nos utilisateurs :
                {% endif %}
            </h4>  
                {% else %}
                    <h4 class="text-center py-2 mt-2">Ce sujet n'a pas encore reçu de commentaires...</h4>
            {% endif %}

        {% for comment in sujet.comments %}
                    <div class="bg-light rounded my-3 px-5 py-3 commentaire">
                        <strong>
                        {% if comment.author.picture %}
                        <img src="{{ asset("images/" ~ comment.author.picture) }}" class="avatar avatar-mini mr-2 my-1">
                        {% else %}
                        <img src="data:image/svg+xml;base64," alt="" class="avatar avatar-mini mr-2 my-1"/> 
                        {% endif %}
                        {{ comment.author.firstName}}  {{comment.author.lastName}}</strong>
                        le (<small>{{comment.createdAt | date('d/m/Y', "Europe/Paris")}} à {{comment.createdAt | date('H:i', "Europe/Paris")}}</small>) :  
                        <p class="contenu">{{comment.content|replace({'chier': '*****', 'putain': '******', 'salope': '******', 'pute': '****', 'fdp': '***','Chier': '*****', 'Putain': '******', 'Salope': '******', 'Pute': '****', 'Fdp': '***'})}}
                        </p>
                    </div> 
                {% endfor %}

        {% if app.user %}
        
            {{ form_start(commentForm)}}
            {{form_widget(commentForm.content, { 'value': ''})}}
                <div class="row justify-content-center py-3">
                    <div class="col">
                        <button type="submit" class="btn btn-success d-block mx-auto my-0" onclick="submitForm()">Commenter</button>
                    </div> 
                    
                </div>
            {{form_end(commentForm)}}
            
            {% else %}
                <h4 class="text-center py-4">Vous devez être connecté pour pouvoir commenter</h2>
                <div class="row justify-content-center pb-3">
                    <div class="col-12">
                        <a href="{{path('account_login')}}" class="btn btn-succes d-block mx-auto my-0">Se connecter</a>
                    </div> 
                </div>
        {% endif %}  
        
    </div>

{% endblock %}