{% extends 'admin/base.html.twig' %}
{% block meta_description %}
    <meta name="description" content="Page d'administration des commentaires" />   
{% endblock %}
{% block title %}Administration des commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
    {% include "partials/flash.html.twig" %}
       <h1 class="py-5 text-center pt-3">Administration des commentaires</h1>
       <table class="table table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th>Commentaire</th>
                    <th>Article</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                    <tr>
                    <td>{{comment.createdAt|date('d/m/Y H:i')}}</td>
                    <td>{{comment.author.firstName}} {{comment.author.lastName}}</td>
                    <td>{{comment.content}}</td>
                    <td>{{comment.sujet.titre}}</td>
                    <td>
                        <a href="{{path('admin_comment_edit', {'id': comment.id})}}" class="btn btn-registration mt-0"><i class="fas fa-edit"></i></a>
                        <a href="{{path('admin_commentaire_delete', {'id': comment.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
       </table> 
    </div>
{% endblock %}
