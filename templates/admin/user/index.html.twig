{% extends 'admin/base.html.twig' %}

{% block meta_description %}
    <meta name="description" content="Page d'administration du site" />   
{% endblock %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
       <h1 class="py-5 text-center pt-3">Administration des utilisateurs</h1>
        {% include "partials/flash.html.twig" %}
       <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th class="text-center">Nombre de commentaire</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                    <td>{{user.firstName}} {{user.lastName}}</td>
                    <td class="text-center">{{user.comments|length}}</td>
                    <td>
                        <a href="{{path('admin_user_delete', {'id': user.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
       </table> 
    </div>
{% endblock %}

